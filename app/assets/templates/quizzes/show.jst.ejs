

<div class="row">
  <div class="col-xs-4">
    <h1><%= quiz.get('title') %></h1>
     by <%= quiz.author %>
  </div>
  <div class="col-xs-offset-1">

  </div>
</div>
<div class="row">

</div>

    <div class="row">
   <hr class="section-heading-spacer">
      <div class="col-xs-12" style="text-align:center">
        <h3> <%= quiz.get('description') %></h3>
      </div>
        <hr class="section-heading-spacer">
    </div>


    <hr class="section-heading-spacer">

    <div class="row" style="height:100px;">

      <div class="col-xs-3" style="text-align:center">
        <p>Completed</p>
         <h2><div id="progress-text" style="font-size:36px; background: orange;" class = "label">0/<%= numQuestions.length %></div></h2>

      </div>

      <div class="col-xs-6" style="text-align:center">

        <div id="quiz-typing" style="display:none;">
          <div class="row">
             <div class="formatting-div" style="width:360px; margin:5px; font-size:24px; height:30px"></div>
          </div>
          <div class="row">
            <input style="width:360px; font-size:30px"id="submit_box">
          </div>
       </div>

       <div id="quiz-clicking" style="display:none;">
         <div class="row question-hint">
           <h3>
             <div id="clicking hint">
             </div>
           </h3>
         </div>

         <div class="prev-next-buttons row btn-group-justified btn-large">
           <button type="button" class="btn btn-success btn-prev">prev</button>
           <button type="button" class="btn btn-info btn-next">next</button>
         </div>
       </div>

        <div id="quiz-start">
          <div class="formatting-div" style="height:30px"></div>

            <button type='button' id="play_button" class="btn-primary btn btn-lg btn-block">Start Game</button>
        </div>

      </div>

      <div class="col-xs-3" style="text-align:center;">
        <p>Time Remaining</p>
          <h2>  <div id="timer_display" style="font-size:36px; background: orange" class="label label-info"><%= quiz.get('time_limit') %></div></h2>
        </div>
      </div>

      <div class="modal fade" id="resultsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
              <h4 class="modal-title" id="myModalLabel">Global Results:</h4>
            </div>
            <div class="modal-body">
              <table id="questions-table"class="table table-striped table-bordered">
                <tr><th style="text-align:center">Answer</th><th style="text-align:center">% Correct</th></tr>
              </table>

              <table id="percentile-table"class="table table-striped table-bordered">
                <tr><th style="text-align:center">Score</th><th style="text-align:center">% Answered</th></tr>
              </table>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            </div>
          </div>
        </div>
      </div>

  <div class="panel-body">
      <hr>
      <div class="col-xs-10 col-xs-offset-1" id="quiz_tables_go_here">
      </div>
    </div>







